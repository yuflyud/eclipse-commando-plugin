<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
<extension
         point="org.eclipse.ui.commands">
      <command
            name="Run 'mvn exec:exec'"
            categoryId="org.eclipse.ui.category.window"
            id="org.melord.pde.explorer.commands.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <separator
               name="org.melord.pde.explorer.separator1">
         </separator>
         <command
               commandId="org.melord.pde.explorer.commands.sampleCommand"
               icon="icons/sample.gif"
               id="org.melord.pde.explorer.menus.sampleCommand"
               mnemonic="E">
            <visibleWhen>
               <iterate
                     ifEmpty="false">
                  <or>
                     <instanceof
                           value="org.eclipse.core.resources.IResource">
                     </instanceof>
                     <instanceof
                           value="org.eclipse.jdt.core.IJavaElement">
                     </instanceof>
                     <instanceof
                           value="org.eclipse.team.ui.synchronize.ISynchronizeModelElement">
                     </instanceof>
                  </or>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="org.melord.pde.explorer.commands.sampleCommand"
            class="com.softserveinc.eclipsecommando.handlers.OpenExplorerHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.melord.pde.explorer.commands.sampleCommand"
            sequence="CTRL+`"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>s
</plugin>
